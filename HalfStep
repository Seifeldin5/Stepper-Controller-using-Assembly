/*
 * HalfStep.asm
 *   Author: Amina 
 */ 
Step 0.5
        sbi PORTA, A1
        cbi PORTA, A2
        cbi PORTA, B1
        cbi PORTA, B2
        ldi delayMultiplier, 5
        
delay:
       loop2:
	     ldi r24, LOW(2000)
             ldi r25, HIGH(2000)
       loop1:
             sbiw r24, 1 
             brne loop1
       
       dec delayMultiplier
       brne loop2  
ret

